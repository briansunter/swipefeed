{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "files": {
    "ignore": [
      "node_modules/",
      "dist/",
      "dist-example/",
      "coverage/",
      "storybook-static/",
      "site/",
      "example/dist/",
      "example/node_modules/"
    ]
  },
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useConst": "warn",
        "noUnusedTemplateLiteral": "warn"
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}

