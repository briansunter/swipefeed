{
  "name": "@brian/tiktok-swipe",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --target=browser --outdir=dist --sourcemap",
    "test": "vitest run --environment jsdom --exclude src/__tests__/**/*browser.*",
    "test:browser": "vitest run --browser src/__tests__/**/*browser.*",
    "test:coverage": "vitest run --coverage --environment jsdom --exclude src/__tests__/**/*browser.*",
    "test:browser:coverage": "vitest run --coverage --browser src/__tests__/**/*browser.*",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "example:dev": "bun run --hot --watch example/index.html --host 0.0.0.0",
    "example:build": "bun build example/index.ts --target=browser --outdir=dist-example --sourcemap",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.12",
    "@tanstack/virtual-core": "^3.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.9.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/bun": "latest",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser": "^2.1.1",
    "happy-dom": "^20.0.11",
    "@storybook/react-vite": "^8.3.6",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-interactions": "^8.3.6",
    "@storybook/test": "^8.3.6",
    "jsdom": "^24.1.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1"
  }
}