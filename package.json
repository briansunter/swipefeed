{
  "name": "swipefeed",
  "version": "0.1.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/briansunter/swipefeed.git"
  },
  "bugs": {
    "url": "https://github.com/briansunter/swipefeed/issues"
  },
  "homepage": "https://briansunter.github.io/swipefeed",
  "workspaces": [
    "example"
  ],
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --target=browser --outdir=dist --sourcemap --production --external react --external react-dom --external @tanstack/react-virtual && tsc --declaration --emitDeclarationOnly --outDir dist --noEmit false",
    "link:peers": "bun scripts/link-peers.ts",
    "prepublishOnly": "bun run build",
    "docs:api": "typedoc",
    "docs:site": "typedoc --options typedoc.site.json",
    "example:build:site": "cd example && VITE_BASE=${VITE_BASE:-/swipefeed/example/} bun run build",
    "site:prepare": "rm -rf site && bun run docs:site && bun run example:build:site && mkdir -p site/example && cp -r example/dist/* site/example/",
    "site:publish": "bun run site:prepare && bunx gh-pages -d site -b gh-pages",
    "prepare": "husky install",
    "test": "vitest run --environment jsdom --exclude src/__tests__/**/*browser.*",
    "test:coverage": "vitest run --coverage --environment jsdom --exclude src/__tests__/**/*browser.*",
    "test:browser": "vitest run --config vitest.browser.config.ts",
    "test:browser:coverage": "vitest run --config vitest.browser.config.ts --coverage",
    "test:coverage:all": "npm run test:coverage && npm run test:browser:coverage && npm run coverage:merge",
    "coverage:merge": "mkdir -p coverage/merged && nyc merge coverage/unit coverage/merged/unit.json && nyc merge coverage/browser coverage/merged/browser.json && nyc merge coverage/merged coverage/merged/final.json && nyc report --reporter=text --reporter=lcov --temp-dir=coverage/merged",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": { "optional": false },
    "react-dom": { "optional": false }
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-interactions": "^8.3.6",
    "@storybook/react": "^8.3.6",
    "@storybook/react-vite": "^8.3.6",
    "@storybook/test": "^8.3.6",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@types/node": "^22.9.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser": "^2.1.1",
    "@vitest/coverage-istanbul": "2.1.9",
    "@vitest/coverage-v8": "2.1.9",
    "commitlint": "^20.2.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "nyc": "^17.1.0",
    "playwright": "^1.57.0",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.6.3",
    "vitest": "2.1.9"
  }
}