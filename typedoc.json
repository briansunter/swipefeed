{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["src/index.ts"],
  "tsconfig": "tsconfig.docs.json",
  "out": "docs/api",
  "plugin": ["typedoc-plugin-markdown"],
  "hideGenerator": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "excludeExternals": true,
  "exclude": [
    "src/__tests__/**/*",
    "src/stories/**/*"
  ],
  "readme": "none",
  "cleanOutputDir": true
}

