{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "types": [
            "vite/client",
            "react",
            "react-dom"
        ],
        "noEmit": true
    },
    "include": [
        ".",
        "../src"
    ],
    "exclude": [
        "../src/**/*.stories.tsx",
        "../src/**/*.test.tsx",
        "../src/**/__tests__/**"
    ]
}